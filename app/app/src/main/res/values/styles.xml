<resources>


    <style name="Widget.MyApp.Button.Capture" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.MyApp.Button.Spray" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="strokeColor">@color/purple_500</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>


    <style name="ThemeOverlay.App.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <!-- 배경 투명/반투명 등 원하는 설정 -->
        <item name="android:windowBackground">#CC000000</item>
        <item name="android:windowNoTitle">true</item>
    </style>




</resources>
