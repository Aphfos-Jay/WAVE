<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ↑ 상단: 원격 피드 (가로에서도 위쪽 크게) -->
    <ImageView
        android:id="@+id/ctrl_remoteFeed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:contentDescription="Remote camera feed" />

    <!-- ↓ 하단: 조종 패널 (높이 낮게) -->
    <LinearLayout
        android:id="@+id/ctrl_bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#F3F3F7"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- 조이스틱 -->
        <com.example.remote.JoystickView
            android:id="@+id/ctrl_joystick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_weight="3" />

        <!-- 버튼 2개 가로 배치 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ctrl_captureRequestButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:backgroundTint="#5E35B1"
                android:text="📸 캡처"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="12dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/ctrl_sprayButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:backgroundTint="#00897B"
                android:text="💧 물 발사"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
